
<%-include("../layout/admin/header")-%>
<%-include("../partials/adminnav")-%>


<div class="container">
   
    <div class="row">
       
        <div class="col-md-12">
            <div class="d-flex justify-content-center align-items-center " style="height: 100vh;">
                <section style="width: 500px; height: 300px;border-radius: 10px; "class="shadow-lg">
                    <form action="/admin/editbrand" method="post">
                        <div class="d-flex justify-content-center align-items-center" style="height: 70px;border-radius:10px 10px 0 0;background-color: rgb(0, 0, 0);">
                            <h4 style="color: white;">Edit Brand</h4>
                        </div>
                        <div class="d-flex justify-content-center align-items-center" style="height: 60px;border-radius:10px 10px 0 0;">
                            <h5><strong>Enter Brand</strong></h5>
                        </div>
                       
                        <div class="d-flex justify-content-center align-items-center" style="height: 37px;border-radius:10px 10px 0 0;">
                            <input type="text" style="border-radius: 15px; padding:10px; height: 35px;" id="editbrand" name="brandname" oninput="validatecat('editbrand')" value=" <%-brand.brandname-%>" required>
                        </div>
                        <input type="hidden" name="id" value="<%-brand._id-%>">
                        <div class="d-flex justify-content-center align-items-center" style="height: 80px;">
                           <a href="/admin/getBrand" class="btn btn-danger me-2">Cancel</a> <button  id="submit" class=" btn btn-dark" style="width: 100px;height: 37px;color: white;">Save changes</button>
                        </div>
                    </form>
                    <p style="color: red; text-align: center;" id="err1"><%-locals.err?err:""-%></p>
                    <!-- <label for="" id="err1" style="color: red;text-align: center;"></label> -->
                </section>
            </div>
           
        </div>
    </div>
</div>


</div>
</div>

<%-include("../layout/admin/footer")-%>