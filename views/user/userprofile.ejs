<div class="modal fade" id="exampleModalReff" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Referral</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body " style="background-image: url('/reffer.jpg');background-size: cover; height: 300px;">
        <h3 class="text-center">
          <small>Reffer And Earn Rs-100/-</small>
        </h3>
        <p id="referralCode" class="mt-5  p-1" style="border: 1px solid black; background-color: white; border-radius: 5px;">http://localhost:3001/send-otp/?reff=<%-user1._id-%></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn" style="background-color: white; color: blue; border: 1px solid blue;" data-bs-dismiss="modal"><small>Close</small></button>
        <button type="button" class="btn" style="background-color: blue; color: white;" id="copyBtn" onclick="copyCouponCode()"><small>Copy</small></button>
      </div>
    </div>
  </div>
</div>

<script>
  function copyCouponCode() {
    const referralCode = document.getElementById('referralCode');
    
    // Create a range object
    const range = document.createRange();
    range.selectNode(referralCode);

    // Create a selection object
    const selection = window.getSelection();
    selection.removeAllRanges();
    selection.addRange(range);

    try {
      // Execute the "copy" command
      document.execCommand('copy');
      
      // Show a toast or alert indicating that the code has been copied
      Toastify({
        text: "Referral code copied successfully!",
        duration: 3000,
        close: true,
        gravity: "top",
        position: 'center',
        style: {
          background: "rgba(0, 0, 255, 0.7)",
          color: "#fff",
          borderRadius: "15px",
        }
      }).showToast();
    } catch (error) {
      console.error('Unable to copy', error);
    } finally {
      // Clear the selection
      selection.removeAllRanges();
    }
  }
</script>

  
  
  





