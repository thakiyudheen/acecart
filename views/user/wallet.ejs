
<%-include("../layout/user/header")-%>
<%-include("../partials/usernav")-%> 

<div class="container">
    <div class="row">
        <nav class="nav nav-borders mt-4">
            <a class="nav-link  ms-0" href="/userprofile" target="__blank">Profile</a>
            <a class="nav-link active "  href="/getwallet" target="__blank">Wallet</a>
            <a class="nav-link" href="/resetpassword" target="__blank">Security</a>
            <a class="nav-link" href="/coupons"  target="__blank">Coupons</a>
            <a class="nav-link  " href="/address"  target="__blank">Address</a>
        </nav>
        <hr class="mt-0 mb-4">
        <div class="col-md-12">
            <!-- Balance Section -->
            <div class="balance-section p-5 shadow-sm rounded  mt-5 border" style="background-color: rgb(220, 220, 220);">
                <i class="fa-solid fa-wallet" style="position: absolute;
                font-size: 50px;
                color: black;
                left: 43px;"></i>
                <h5 class="ms-5"><b>Current Balance</b></h5>
                <h6 class="ms-5"><b>₹ <%- wallet.wallet?wallet.wallet:0 -%>.00</b></h6>
            </div>
        </div>
        <div class="col-md-12">
<!-- Transaction Section -->
<div class="transaction-table mt-5 mb-4">
    <h5><small>Transaction History</small></h5>

    <!-- Transaction Table -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Amount</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            <!-- Sample Transactions (Replace with dynamic data from your backend) -->
            <% wallethistory.forEach(el => { %>
             
            
            <tr>
                <td><%-el.date.toLocaleString() -%></td>
                <td><%-el.type-%></td>
                <% if (el.type=='debit') { %>
                    <td style="color: red;">- ₹<%-el.amount-%></td>
                <% }else{ %>
                    <td style="color:green;">+ ₹<%-el.amount-%></td>
                    <%}%>

                <td><%-el.reason-%></td>
            </tr>
            <% }) %>
            <!-- Add more rows as needed -->
        </tbody>
    </table>
</div>



        </div>
    </div>

    


</div>



